<?xml version="1.0" encoding="UTF-8"?>  
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.  
org/dtd/spring-beans.dtd">
<beans>
	<bean id="car" class="cn.blmdz.test.test.Car" init-method="myinit" destroy-method="mydestory">
		<property name="brand">
			<value>hi action!</value>
		</property>
		<property name="maxSpeed">
			<value>300</value>
		</property>
	</bean>
	
	<bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>resource</value>
			</list>
		</property>
	</bean>
	
	<bean id="myResources1" class="org.springframework.context.support.ResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>resource</value>
			</list>
		</property>
	</bean>
	
	<bean id="myResources2" class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="basenames">
			<list>
				<value>resource</value>
			</list>
		</property>
		<property name="cacheSeconds" value="5"/>
	</bean>
	
	<bean class="cn.blmdz.event.SendListener" />
	<bean class="cn.blmdz.event.Sender" />
	
	<bean id="greetingBeforeAdvice" class="cn.blmdz.aop.spring.GreetingBeforeAdvice"/>
	<bean id="greetingAfterAdvice" class="cn.blmdz.aop.spring.GreetingAfterAdvice"/>
	<bean id="greetingInterceptor" class="cn.blmdz.aop.spring.GreetingInterceptor"/>
	<bean id="transactionAdvice" class="cn.blmdz.aop.spring.TransactionAdvice"/>
	<bean id="target" class="cn.blmdz.aop.spring.NaiveWaiter"/>
	
	<bean id="waiter" class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="proxyInterfaces" value="cn.blmdz.aop.spring.Waiter"/>
		<property name="target" ref="target"/>
		<property name="interceptorNames">
			<list>
				<value>greetingBeforeAdvice</value>
				<value>greetingAfterAdvice</value>
				<value>greetingInterceptor</value>
				<value>transactionAdvice</value>
			</list>
		</property>
	</bean>
	
	
	<bean id="pmonitor" class="cn.blmdz.aop.spring.ControllablePerformanceMonitor"/>
	<bean id="forumServiceTarget" class="cn.blmdz.aop.test.ForumServiceImpl2"/>
	<bean id="forumService" class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="proxyInterfaces" value="cn.blmdz.aop.spring.Monitorable"/>
		<property name="target" ref="forumServiceTarget"/>
		<property name="interceptorNames" value="pmonitor"/>
		<property name="proxyTargetClass" value="true"/>
	</bean>
	
	
</beans> 